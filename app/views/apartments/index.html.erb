<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Address</th>
      <!-- <th>Address</th> -->
      <th>City</th>
      <th>Zipcode</th>
      <th>State</th>
      <th>Country</th>
      <th>Owner</th>
      <th>Phone#</th>
      <th>Time to Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.address1 %> <%= apartment.address2 %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.postalcode %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.country %></td>
        <td><%= apartment.owner.name %></td>
        <td><%= apartment.owner.phone_number %></td>
        <td><%= apartment.owner.time %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path %>
<hr>
<div id="all_map">Google map will appear here...</div>
<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({
    provider: {},
    internal: {id: 'all_map'}
  },
  function() {
    markers = handler.addMarkers(<%=raw @pindrop.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(6);
  }
);
</script>
